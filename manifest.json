{
    "manifest_version": 2.0,
    "id": "itemmax",
    "type": "widget",
    "name": "itemMAX",
    "namespace": "ItemMAX",
    "version": "1.0",
    "author": "initMAX s.r.o.",
    "description": "This widget extends features of the 'Item Value' widget by displaying the history using a background graph.",
    "url": "https://www.initmax.com",
    "widget": {
        "size": {
            "width": 12,
            "height": 3
        },
        "js_class": "CWidgetItemMAX",
        "in": {
            "itemid": {
                "type": "_itemid",
                "required": true
            },
            "time_period": {
                "type": "_timeperiod"
            },
            "graphtimeperiod": {
                "type": "_timeperiod"
            }
        }
    },
    "actions": {
        "widget.itemmax.view": {
            "class": "WidgetView"
        }
    },
    "assets": {
        "js": ["class.widget.js"],
        "css": [
            "widget.css",
            "form.css"
        ]
    }
}
